set incsearch
set ignorecase
set smartcase
set termguicolors
set scrolloff=8
set signcolumn=yes
set noswapfile
set nobackup
set undodir=~/.config/nvim/undodir
set undofile
set noshowmode
set mouse=a
set tags=tags
Plug 'folke/which-key.nvim'

